{
	"name": "svelte-exmarkdown",
	"description": "Svelte component to render markdown. Dynamic and Extensible.",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky install",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test-watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"fmt": "prettier --write --plugin-search-dir=. .",
		"semantic-release": "semantic-release"
	},
	"peerDependencies": {
		"svelte": "^3.47.0"
	},
	"dependencies": {
		"remark-gfm": "^3.0.1",
		"remark-parse": "^10.0.1",
		"remark-rehype": "^10.1.0",
		"unified": "^10.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@sveltejs/adapter-static": "^1.0.5",
		"@sveltejs/kit": "^1.3.7",
		"@sveltejs/package": "^1.0.2",
		"@sveltejs/vite-plugin-svelte": "^2.0.2",
		"@testing-library/svelte": "^3.2.2",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"@vitest/coverage-v8": "^0.32.0",
		"@vitest/ui": "^0.32.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^7.0.4",
		"jsdom": "^21.1.0",
		"mermaid": "^9.3.0",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"rehype-raw": "^6.1.1",
		"semantic-release": "^19.0.3",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte2tsx": "^0.6.0",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.0.4",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^0.32.0",
		"water.css": "^2.1.1"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/ssssota/svelte-exmarkdown.git"
	},
	"homepage": "https://ssssota.github.io/svelte-exmarkdown",
	"keywords": [
		"svelte",
		"markdown",
		"remark",
		"unified",
		"commonmark",
		"gfm",
		"plugin"
	],
	"license": "MIT",
	"packageManager": "pnpm@8.6.1"
}
