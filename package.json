{
	"name": "svelte-exmarkdown",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync && husky install",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check-watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test-watch": "vitest watch",
		"coverage": "vitest run --coverage",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"fmt": "prettier --write --plugin-search-dir=. .",
		"semantic-release": "semantic-release"
	},
	"dependencies": {
		"remark-gfm": "^3.0.1",
		"remark-parse": "^10.0.1",
		"remark-rehype": "^10.1.0",
		"unified": "^10.1.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.3.0",
		"@commitlint/config-conventional": "^16.2.4",
		"@sveltejs/adapter-static": "latest",
		"@sveltejs/kit": "latest",
		"@sveltejs/vite-plugin-svelte": "^1.0.1",
		"@testing-library/svelte": "^3.1.3",
		"@types/mermaid": "^8.2.9",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"@vitest/ui": "^0.9.4",
		"c8": "^7.12.0",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^7.0.4",
		"jsdom": "^19.0.0",
		"mermaid": "^9.1.3",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.28.0",
		"semantic-release": "^19.0.3",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.12",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4",
		"vite": "^3.0.2",
		"vite-tsconfig-paths": "^3.5.0",
		"vitest": "^0.18.1",
		"water.css": "^2.1.1"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/ssssota/svelte-exmarkdown.git"
	},
	"homepage": "https://ssssota.github.io/svelte-exmarkdown",
	"keywords": [
		"svelte",
		"markdown",
		"remark",
		"unified",
		"commonmark",
		"gfm",
		"plugin"
	],
	"license": "MIT",
	"packageManager": "pnpm@7.6.0"
}
